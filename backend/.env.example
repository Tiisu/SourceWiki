

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration

MONGODB_URI=your mongodb url

# JWT Configuration
# Secret key for signing JWT tokens (required - use a strong, random string)
JWT_SECRET=your_super_secret_jwt_key_here

# JWT token expiration (default: 30d)
# Examples: 15m, 1h, 24h, 7d, 30d
JWT_EXPIRE=30d

# JWT Refresh Token Configuration
# Secret key for signing refresh tokens (required - use a different strong string)
JWT_REFRESH_SECRET=your_super_secret_refresh_token_key_here

# JWT refresh token expiration (default: 7d)
# Examples: 7d, 30d, 90d
JWT_REFRESH_EXPIRE=7d

# Frontend Configuration

FRONTEND_URL=http://localhost:3000
